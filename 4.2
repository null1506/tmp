#include<stdio.h>
#include<stdlib.h>
#include<math.h>
// Hoàng Hải Yến
// x^7 + 3x^4 - 5x + 3
// (4, 7 ,1, 4, 3, 1, -5, 0, 3)
int dt[10000];

void solve(int arr[], int n){
    for (int i = 1; i < n; i += 2){ 
        int tmp = 0; // hệ số
        tmp = arr[i + 1];
        int mu = 0;
        mu = arr[i]; // mũ
        dt[mu] += tmp;
    }
}

int main(){
    int arr1[10000];
    int arr2[10000];
    int n1, n2;
    printf("Nhap so luong phan tu cua dt 1: ");
    scanf("%d", &n1);
    printf("Nhap cac phan tu cua dt 1: ");
    for (int i = 0; i < n1; i ++){
        scanf("%d", &arr1[i]);
    }
    printf("Nhap so luong phan tu cua dt 2: ");
    scanf("%d", &n2);
    printf("Nhap cac phan tu cua dt 2: ");
    for (int i = 0; i < n2; i ++){
        scanf("%d", &arr2[i]);
    }
    int cnt = 0;
    solve(arr1, n1);
    solve(arr2, n2);
    for (int i = 10000; i >= 0; i--){
        if(dt[i] != 0){
            cnt += 1;
        }
    }
    int arr[100];
    arr[0] = cnt;
    int c = 1;
    for (int i = 10000; i >= 0; i--){
        if(dt[i] != 0){
            arr[c] = i;
            arr[c + 1] = dt[i];
            c += 2;
        }
    }

    for (int i = 0; i < c; i++){
        printf("%d ", arr[i]);
    }
}
